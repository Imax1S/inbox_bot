# Telegram Bot (get token from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_USER_ID=your_telegram_user_id

# LLM Provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Per-agent model overrides (optional â€” defaults based on provider)
# COLLECTOR_MODEL=claude-sonnet-4-5-20250929
# CLUSTERER_MODEL=claude-sonnet-4-5-20250929
# RESEARCHER_MODEL=claude-sonnet-4-5-20250929
# WRITER_MODEL=claude-opus-4-6
# EDITOR_MODEL=claude-opus-4-6

# Obsidian Vault Path
OBSIDIAN_VAULT_PATH=/vault/life/weekly

# Database
# DB_PATH=data/digest.db

# Schedule (Sunday 23:00 Berlin time by default)
# SCHEDULE_ENABLED=true
# SCHEDULE_DAY=6
# SCHEDULE_HOUR=23
